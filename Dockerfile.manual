FROM node:20-alpine

# Instalar dependÃªncias do sistema
RUN apk add --no-cache curl dumb-init python3 make g++

# Definir diretÃ³rio de trabalho
WORKDIR /app

# Copiar tudo
COPY . .

# Instalar dependÃªncias
RUN npm install

# Compilar TypeScript manualmente
RUN npx tsc

# Verificar se o build foi bem-sucedido
RUN echo "ğŸ“ ConteÃºdo do diretÃ³rio dist/:" && \
    ls -la dist/ && \
    echo "ğŸ” Verificando dist/main.js:" && \
